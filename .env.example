# =============================================================================
# Environment Variables - Trading Bot
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Hyperliquid
# -----------------------------------------------------------------------------
HL_PRIVATE_KEY=your_hyperliquid_private_key_here
HL_USER_ADDRESS=0xYourWalletAddressHere

# -----------------------------------------------------------------------------
# Aster
# -----------------------------------------------------------------------------
ASTER_API_KEY=your_aster_api_key_here
ASTER_API_SECRET=your_aster_api_secret_here

# -----------------------------------------------------------------------------
# Lighter
# -----------------------------------------------------------------------------
LIGHTER_API_KEY=your_lighter_api_key_here
LIGHTER_PRIVATE_KEY=your_lighter_private_key_here
LIGHTER_ACCOUNT_INDEX=your_account_index_here
LIGHTER_API_KEY_INDEX=your_api_key_index_here
LIGHTER_L1_ADDRESS=0xYourL1AddressHere

# -----------------------------------------------------------------------------
# Notifications
# -----------------------------------------------------------------------------
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# -----------------------------------------------------------------------------
# Bot Mode (paper or live)
# -----------------------------------------------------------------------------
BOT_MODE=paper

# -----------------------------------------------------------------------------
# License (required for live mode)
# -----------------------------------------------------------------------------
# Generate with: python -m core.license your@email.com 365
# Or save to data/license.key file
BOT_LICENSE_KEY=your_email@example.com:1234567890:abcdef1234567890
